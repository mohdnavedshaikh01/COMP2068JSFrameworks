<div class="hero-section text-center py-5 bg-light rounded mb-4">
  <h1 class="display-4">Welcome to CookOff!</h1>
  <p class="lead">Discover, share, and compete with your favorite recipes</p>
  
  {{#unless user}}
    <div class="mt-4">
      <a href="/auth/register" class="btn btn-primary btn-lg mx-2">Join Now</a>
      <a href="/auth/login" class="btn btn-outline-primary btn-lg mx-2">Login</a>
    </div>
  {{/unless}}
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Featured Recipes</h3>
      </div>
      <div class="card-body">
        {{#each recipes}}
          <div class="card mb-3">
            {{#if this.imageUrl}}
              <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.title}}">
            {{/if}}
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{truncate this.description 100}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">By {{creator.username}}</small>
                <a href="/recipes/{{this._id}}" class="btn btn-sm btn-primary">View Recipe</a>
              </div>
            </div>
          </div>
        {{else}}
          <p>No featured recipes yet.</p>
        {{/each}}
        <a href="/recipes" class="btn btn-outline-primary">View All Recipes</a>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Current Challenges</h3>
      </div>
      <div class="card-body">
        {{#each challenges}}
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.description}}</p>
              <p><strong>Theme:</strong> {{this.theme}}</p>
              <p><strong>Ends:</strong> {{formatDate this.endDate}}</p>
              <a href="/challenges/{{this._id}}" class="btn btn-primary">Join Challenge</a>
            </div>
          </div>
        {{else}}
          <p>No active challenges at the moment.</p>
        {{/each}}
        <a href="/challenges" class="btn btn-outline-primary">View All Challenges</a>
      </div>
    </div>
  </div>
</div>